{
  "name": "@rudderstack/rudder-multi-module-monorepo",
  "version": "1.0.0",
  "description": "Rudder Android SDK monorepo",
  "keywords": [
    "android",
    "rudder",
    "kotlin"
  ],
  "author": "RudderStack",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rudderlabs/rudder-sdk-android.git"
  },
  "bugs": {
    "url": "https://github.com/rudderlabs/rudder-sdk-android/issues"
  },
  "homepage": "https://github.com/rudderlabs/rudder-sdk-android#readme",
  "scripts": {
    "setup:ci": "npm i && npm ci",
    "bump-version:monorepo": "npm version minor --git-tag-version false",
    "release": "nx affected --base=origin/master --target=version --parallel=1 --skipCommitTypes=docs,ci,chore",
    "release:github": "nx affected --target=github --parallel=1 --exclude=example --skipCommitTypes=docs,ci,chore"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "17.5.1",
    "@commitlint/config-conventional": "17.4.4",
    "@digitalroute/cz-conventional-changelog-for-jira": "8.0.0",
    "@jnxplus/nx-gradle": "^0.6.1",
    "@jscutlery/semver": "2.30.1",
    "@nrwl/cli": "15.8.9",
    "@nrwl/linter": "15.8.9",
    "@nrwl/web": "15.8.9",
    "@nrwl/workspace": "15.8.9",
    "commitizen": "4.3.0",
    "commitlint": "17.5.1",
    "conventional-changelog-cli": "2.2.2",
    "conventional-github-releaser": "3.1.5",
    "nx": "16.5.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/@digitalroute/cz-conventional-changelog-for-jira",
      "jiraMode": false,
      "jiraOptional": true,
      "skipScope": false,
      "scopes": [
        "android"
      ],
      "maxHeaderWidth": 120,
      "defaultScope": "@rudderstack/rudder-multi-module-monorepo",
      "defaultType": "feat"
    }
  },
  "nx": {
    "targets": {}
  }
}
